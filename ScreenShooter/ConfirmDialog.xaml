<Window x:Class="ScreenShooter.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenShooter"
        mc:Ignorable="d"
        Height="30" Width="100" WindowStyle="None" ResizeMode="NoResize" Topmost="True" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnCapture" Grid.Column="0" Content="Capture" Click="btnCapture_Click" ></Button>
        <Button x:Name="btnCancel" Grid.Column="1" Content="Cancel" Click="btnCancel_Click" ></Button>
    </Grid>
</Window>
